<Page x:Class="RealtorUI.Pages.EstateShowPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RealtorUI.Pages"
      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EstateShowPage">

    <Grid>
        <Controls:MetroTabControl>
            <TabItem Header="Buy" Width="100" PreviewMouseDown="TabItem_PreviewMouseDown">
                <Grid Margin="10,10,10,10">
                    <ListView x:Name="lv_Buy">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="200">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Image x:Name="img_EstView" Grid.Column="0" Margin="10,10,10,10" Source="{Binding Image}"/>
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock FontSize="18" Text="Real Estate Name:" Height="22"/>
                                            <TextBlock FontSize="18" Text="Rooms Count:" Height="22"/>
                                            <TextBlock FontSize="18" Text="Territory Size(m/q):" Height="22"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock FontSize="18" Text="{Binding StateName}" Height="22"/>
                                            <TextBlock FontSize="18" Text="{Binding RoomCount}" Height="22"/>
                                            <TextBlock FontSize="18" Text="{Binding TerritorySize}" Height="22"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Rent" Width="100">
                <Grid Margin="10,10,10,10">
                    <ListView x:Name="lv_Rent">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="200">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Image x:Name="img_EstView" Grid.Column="0" Margin="10,10,10,10" Source="{Binding Image}"/>
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock FontSize="18" Text="Real Estate Name:" Height="22"/>
                                            <TextBlock FontSize="18" Text="Rooms Count:" Height="22"/>
                                            <TextBlock FontSize="18" Text="Territory Size(m/q):" Height="22"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock FontSize="18" Text="{Binding StateName}" Height="22"/>
                                            <TextBlock FontSize="18" Text="{Binding RoomCount}" Height="22"/>
                                            <TextBlock FontSize="18" Text="{Binding TerritorySize}" Height="22"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabItem>
        </Controls:MetroTabControl>
        <!--<ListView Margin="10,10,10,10" Background="MediumPurple">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Height="300">
                        <Grid.Effect>
                            <DropShadowEffect/>
                        </Grid.Effect>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>-->
    </Grid>
</Page>
