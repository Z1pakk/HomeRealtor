      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RealtorUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewsPage">
    <ScrollViewer >
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="73*"></RowDefinition>
            <RowDefinition Height="351*"></RowDefinition>
            <RowDefinition Height="26*"></RowDefinition>
        </Grid.RowDefinitions>
        <!-- Устанавливаем три столбца -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>

        </Grid.ColumnDefinitions>
        
            <TextBlock x:Name="txtText" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" >

            </TextBlock>
      

        <Label Content="" x:Name="txtHeadline" FontSize="35" HorizontalAlignment="Center"  VerticalAlignment="Top" Grid.ColumnSpan="2"    />
        <Image HorizontalAlignment="Left" Height="156" Margin="100,0,0,0" VerticalAlignment="Top" Width="262" Grid.Column="1" Grid.Row="1"/>

