<Page x:Class="RealtorUI.Pages.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RealtorUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="89*"/>
            <RowDefinition Height="361*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock x:Name="txt_Name" Margin="10,0" Text="Owner of Estate: " FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="Write Message: " FontSize="20" FontWeight="Bold" Margin="10,30"/>
        </StackPanel>
        <Border Grid.Row="1"  BorderThickness="2" CornerRadius="2" BorderBrush="LightSkyBlue" Margin="5,5,5,70">
            <TextBox Grid.Row="1" VerticalContentAlignment="Top" BorderThickness="0" TextWrapping="Wrap" Foreground="Black" FontSize="17" x:Name="textBoxMess" Margin="2,2,2,2" />
        </Border>
        <Button Grid.Row="1" Content="Send" FontStyle="Italic" FontSize="20" Height="50" Width="130" VerticalAlignment="Bottom" Margin="0,0,10,10" HorizontalAlignment="Right" Click="Button_ClickAsync"/>
    </Grid>
</Page>
