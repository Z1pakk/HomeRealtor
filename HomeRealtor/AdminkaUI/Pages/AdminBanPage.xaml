<Page x:Class="AdminkaUI.Pages.AdminBanPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdminkaUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminBanPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="92*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Enter Email" FontSize="20" Margin="205,70,345,0" Grid.Row="0" />
        <TextBox Grid.Row="1" Name="BanEmail" Margin="190,0,400,0" />
        <TextBlock Text="Your answer" FontSize="20" Margin="205,13,450,5" Width="auto" Grid.Row="3"/>
        <TextBlock x:Name="answer" Width="auto" Grid.Row="4" Margin="205,0,382,0" />
        <Button x:Name="butAccept" Content="BAN" Margin="388,10,312,10" Grid.Row="2"/>
    </Grid>
</Page>
